{
  "manifest_version": 3,
  "name": "Memory Chat Logger",
  "version": "1.1",
  "description": "Log and view ChatGPT conversations with selective message storage.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["utils.js", "ui-components/storage-button.js", "ui-components/message-buttons.js", "ui-components/clear-button.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 